
numTrain = -1
numQueries = -1
mode = "histogram"                  # mode to get the features: histogram, wavelet

[Histograms]
histogram_mode = "pyramid"          # simple, subimage, pyramid
color_space = "Yuv"                 # LAB, Luv, HSL, HSV, Yuv, XYZ, YCrCb
bin_num = 60
visualize = False
subdivision = 2                     # used for the histogram mode subimage
levels = 2                          # used for the histogram mode pyramid

[Wavelets]
method = "haar"                     # 'haar', 'db', 'sym', 'coif', 'bior', 'rbio', 'dmey', 'gaus', 'mexh', 'morl', 'cgau', 'shan', 'fbsp', 'cmor'
levels = 1

[Directories]
imdir_train = "./Dataset/museum_set_random/"
imdir_query = "./Dataset/query_devel_random/"

[Evaluate]
k = 5
eval_method = "L1"                # euclidean, L1, x_sq, hist_intersect, kernhell

[Visualization]
enabled = False 

[Save_Pickle]
save = True
pathOut = "./Dataset/pickle/"